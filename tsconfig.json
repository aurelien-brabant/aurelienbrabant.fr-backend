{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "target": "es6",
    "esModuleInterop": true,
    "allowJs": false,
    "typeRoots": ["./types", "./node_modules/@types"]
  },

  "include": [
    "routes/*",
    "services/*",
    "middlewares/*",
    "src/**/*",
    "bin/*",
    "types/*"
  ],

  "ts-node": {
    "files": true
  }
}
