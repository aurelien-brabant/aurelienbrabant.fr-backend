{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "target": "es6",
    "esModuleInterop": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },

  "include": [
    "routes/*",
    "services/*",
    "middlewares/*",
    "src/**/*",
    "bin/*",
    "types/*"
  ],

  "exclude": ["node_modules"]
}
